    "css": {
        "gradients": {
            "grad-1": "background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);",
            "grad-2": "background: linear-gradient(135deg, #8b5cf6 0%, #d946ef 100%);",
            "grad-3": "background: linear-gradient(135deg, #0f172a 0%, #334155 100%); border: 1px solid rgba(255,255,255,0.1);",
            "grad-4": "background: linear-gradient(135deg, #10b981 0%, #059669 100%);",
            "grad-netflix": "background: linear-gradient(135deg, #E50914 0%, #87070d 100%); box-shadow: 0 4px 15px rgba(229,9,20,0.4);",
            "grad-morning": "background: linear-gradient(135deg, #fce38a 0%, #f38181 100%); color: #fff; text-shadow: 0 2px 4px rgba(0,0,0,0.15);",
            "grad-noon": "background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);",
            "grad-afternoon": "background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);",
            "grad-night": "background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%); border: 1px solid rgba(255,255,255,0.1);",
            "grad-gaming": "background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%); border: 1px solid #00ff88;",
            "grad-streaming": "background: linear-gradient(135deg, #8EC5FC 0%, #E0C3FC 100%); color: #4a4a4a;",
            "grad-quote": "background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: #004d40;",
            "grad-holiday": "background: linear-gradient(135deg, #FFD700 0%, #FDB931 100%); color: #8a6e00;",
            "grad-national": "background: linear-gradient(135deg, #ff0000 0%, #ff4d4d 50%, #ffffff 50%, #f0f0f0 100%); color: #000;"
        },
        "components": {
            "bannerSlide": ".banner-slide { width: 100%; height: 100%; border-radius: 16px; display: flex; flex-direction: column; align-items: center; justify-content: center; text-align: center; padding: 20px; position: relative; overflow: hidden; color: white; }",
            "bannerContent": ".banner-content h3 { font-size: 1.6rem; font-weight: 800; margin-bottom: 6px; text-shadow: 0 2px 4px rgba(0,0,0,0.2); } .banner-content p { font-size: 1.05rem; opacity: 0.95; margin-bottom: 14px; }",
            "bannerBadge": ".banner-badge { background: rgba(255,255,255,0.2); backdrop-filter: blur(4px); padding: 6px 14px; border-radius: 50px; font-size: 0.85rem; font-weight: 700; }",
            "slideshowContainer": ".slideshow-container { width: 100%; border-radius: 16px; overflow: hidden; margin-bottom: 24px; background: #0f172a; }",
            "slidesWrapper": ".slides-wrapper { position: relative; width: 100%; height: 140px; overflow: hidden; }",
            "glitchAnimation": "@keyframes glitch-entry { 0% { transform: translate(0); opacity: 0; } 10% { opacity: 1; transform: translate(-5px, 5px); } 20% { transform: translate(5px, -5px); } 100% { transform: translate(0); opacity: 1; } }"
        }
    },
